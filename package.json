{
  "name": "@clippet/react",
  "version": "0.0.1",
  "description": "A font for sounds. An elegant React library for audio feedback in user interfaces.",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/types/index.d.ts",
  "sideEffects": false,
  "scripts": {
    "setup": "yarn && yarn --cwd=./examples setup",
    "test": "jest",
    "build": "rm -rf ./dist/ && yarn build:esm && yarn build:cjs",
    "build:esm": "tsc --project tsconfig.json",
    "build:cjs": "tsc --project tsconfig-cjs.json",
    "build:watch": "yarn build:esm --watch",
    "postbuild": "copyfiles -u 1 assets/**/*.ogg dist/assets",
    "publish:npm": "yarn build && yarn test && npm shrinkwrap && npm publish --access public",
    "publish:dry": "yarn publish:npm --dry-run",
    "clean": "rimraf dist/ && rimraf coverage/ && rimraf reports/ && rimraf *.log && rimraf node_modules/"
  },
  "exports": {
    ".": {
      "require": "./dist/cjs/index.js",
      "import": "./dist/esm/index.js",
      "types": "./dist/types/index.d.ts"
    },
    "./clips/*": {
      "require": "./dist/cjs/clips/*.js",
      "import": "./dist/esm/clips/*.js",
      "types": "./dist/types/index.d.ts"
    }
  },
  "typesVersions": {
    "*": {
      "*": [
        "./dist/types/*"
      ]
    }
  },
  "keywords": [
    "Font",
    "Sounds",
    "Audio",
    "Feedback",
    "User",
    "Interfaces",
    "Accessibility",
    "React"
  ],
  "author": "BMD Studio <hello@bmd.studio> (https://bmd.studio/)",
  "license": "MIT",
  "homepage": "https://github.com/bmd-studio/clippet-react",
  "bugs": {
    "url": "https://github.com/bmd-studio/clippet-react/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bmd-studio/clippet-react.git"
  },
  "publishConfig": {
    "cache": "cache/.npm",
    "registry": "https://registry.npmjs.org/"
  },
  "files": [
    "dist",
    "assets"
  ],
  "devDependencies": {
    "@types/jest": "^29.1.1",
    "@types/node": "^18.8.1",
    "@types/react": "^18.0.21",
    "@types/react-dom": "^18.0.6",
    "copyfiles": "^2.4.1",
    "jest": "^29.1.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  },
  "peerDependencies": {
    "react-dom": "^16.0.0 || ^17.0.0 || ^18.0.0"
  }
}
