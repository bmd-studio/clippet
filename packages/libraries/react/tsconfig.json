{
  "compilerOptions": {
    "module": "esnext",
    "outDir": "dist",
    "target": "esnext",
    "resolveJsonModule": true,
    "sourceMap": true,
    "inlineSources": true,
    "strict": true,
    "allowJs": true,
    "pretty": true,
    "declaration": true,
    "declarationDir": "./dist/types",
    "importHelpers": false,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "strictNullChecks": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedParameters": false,
    "noUnusedLocals": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strictBindCallApply": false,
    "jsx": "react-jsx",
    "types": ["node", "jest"]
  },
  "compileOnSave": false,
  "assets":["**/*.ogg"],
  "exclude": [
    "node_modules",
    "dist",
    "**/__tests__/**"
  ],
  "include": [
    "src/**/*"
  ],
  "references": [
    { "path": "../../shared" }
  ]
}
