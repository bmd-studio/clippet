{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "resolveJsonModule": true,
    "strict": true,
    "allowJs": true,
    "pretty": true,
    "declaration": true,
    "importHelpers": false,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedParameters": false,
    "noUnusedLocals": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strictBindCallApply": false,
    "jsx": "react-jsx",
    "types": ["node", "jest"],
    "paths": {
      // "@clippet/shared": ["./shared/"],
    },
  },
  "compileOnSave": false,
  "exclude": [
    "node_modules",
    "dist",
    "**/__tests__/**"
  ],
}
